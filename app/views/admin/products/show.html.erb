<div class="container">
  <div class="row">
    <h2>商品詳細</h2>
    <div>
      <%= attachment_image_tag @product, :image, fallback:"no-image.png", size: '230x180' %>
    </div>
    <table>
      <tbody>
        <tr>
          <td>商品名</td>
          <td><%= @product.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @product.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @product.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br>(税抜価格)</td>
          <td><%= @product.add_tax_price.to_s(:delimited) %>(<%= @product.price.to_s(:delimited) %>)円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @product.is_active == true %>
              販売中
            <% else %>
              販売停止中
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <%= link_to "編集する", edit_admin_product_path(@product.id), class:"btn btn-success" %>
</div>