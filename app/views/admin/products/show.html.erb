<div class="container">
  <h5 class="ml-4 my-4 bg-light d-inline-flex">商品詳細</h5>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="row mt-5">
        <div class="col-4">
          <%= attachment_image_tag @product, :image, fallback:"no-image.png", size: '230x180' %>
        </div>
        <div class="col-8">
          <table>
            <tbody>
              <tr class="mb-2">
                <td>商品名</td>
                <td><%= @product.name %></td>
              </tr>
              <tr>
                <td>商品説明</td>
                <td><%= @product.introduction %></td>
              </tr>
              <tr>
                <td>ジャンル</td>
                <td><%= @product.genre.name %></td>
              </tr>
              <tr>
                <td>税込価格<br>(税抜価格)</td>
                <td><%= @product.add_tax_price.to_s(:delimited) %>(<%= @product.price.to_s(:delimited) %>)円</td>
              </tr>
              <tr>
                <td>販売ステータス</td>
                <td>
                  <% if @product.is_active == true %>
                    <div class="text-success">販売中</div>
                  <% else %>
                    <div class="text-black-50">販売停止中</div>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <%= link_to "編集する", edit_admin_product_path(@product.id), class:"btn btn-success w-auto mx-auto" %>
      </div>
    </div>
  </div>
</div>