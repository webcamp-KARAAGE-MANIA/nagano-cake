<div class="container">
  <h5 class="ml-4 my-4 bg-light d-inline-flex">商品一覧</h5>
  <div class="col-md-9 d-inline-flex justify-content-end">
    <div class="ml-4 my-4 d-inline-flex justify-content-end">
     <%= link_to new_admin_product_path do %>
       <button type="button" class="btn btn-light rounded-circle p-0 " style="width:3rem;height:3rem;">＋</button>
     <% end %>
    </div>
  </div>
  <div class="row justify-content-center mb-5">
    <div class="col-md-8">
      <table class="table table-hover mt-4">
        <thead class="table-secondary">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.id %></td>
              <td>
                <%= link_to admin_product_path(product.id), class:'text-dark' do %>
                  <%= product.name %>
                <% end %>
              </td>
              <td><%= product.price.to_s(:delimited) %></td>
              <td><%= product.genre.name %></td>
              <td>
                <% if product.is_active == true %>
                  <p class="text-success">販売中</p>
                <% else %>
                  <p class="text-black-50">販売停止中</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @products %>
    </div>
  </div>
</div>