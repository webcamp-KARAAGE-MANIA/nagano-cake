<% if @model == 'customer' %>
<h3>Customers search for "<%= @word%>"</h3>
  <div class="container">
    <h4 class="col-md-4 bg-light mt-3 text-center"><%= @customer.full_name %>さんの会員情報</h4>
  <div class="row">
    <div class="col-md-8">
    <table class='table table-hover table-inverse mt-3'>
      <tbody>
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>ユーザーステータス</td>
          <td><% if @customer.is_delete == false %>
            <p　class="text-success">有効</p>
            <% else %>
            <p>無効</p></td>
            <% end %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to "編集", edit_admin_customer_path(@customer.id), class: 'btn btn-success' %>
          <%= link_to "注文一覧に戻る", admin_orders_path, class: 'btn btn-primary' %></td>
        </tr>
      </tbody>
      </table>
    </div>
  </div>
</div>
<% elsif @model == 'Products' %>
	<h3>Productss search for "<%= @word %>"</h3>
  <div class="container mt-4">
    <div class="row">
      <div class="bg-light pl-4 pr-4">
        <h5>商品詳細</h5>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-4">
        <%= attachment_image_tag @product, :image, fallback:"no-image.png", size: '230x180' %>
      </div>
      <div class="col-8">
        <table>
          <tbody>
            <tr class="mb-2">
              <td>商品名</td>
              <td><%= @product.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @product.introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @product.genre.name %></td>
            </tr>
            <tr>
              <td>税込価格<br>(税抜価格)</td>
              <td><%= @product.add_tax_price.to_s(:delimited) %>(<%= @product.price.to_s(:delimited) %>)円</td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
                <% if @product.is_active == true %>
                  <div class="text-success">販売中</div>
                <% else %>
                  <div class="text-black-50">販売停止中</div>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <%= link_to "編集する", edit_admin_product_path(@product.id), class:"btn btn-success w-auto mx-auto" %>
    </div>
  </div>
<% end %>