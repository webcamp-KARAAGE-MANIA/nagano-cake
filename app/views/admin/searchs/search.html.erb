<div class="container">
<h5 class="ml-4 my-4 bg-light d-inline-flex">"<%= @search %>"の検索結果</h5>
<div class="row">
  <div class="col-md-12">
    <table class='table table-hover table-inverse'>
      <% if @customers.present? %>
      <thead class="table-secondary">
        <tr>
          <th>Id No.</th>
          <th>名前</th>
          <th>なまえ（カナ）</th>
        </tr>
      </thead>
        <% @customers.each do |customer| %>
        <tbody>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.full_name, admin_customer_path(customer) %></td>
            <td><%= customer.full_name_kana %></td>
          </tr>
        </tbody>
        <% end %>
        <%= paginate @customers %>
      <% elsif @products.present? %>
      <thead class="table-secondary">
        <tr>
          <th>Id No.</th>
          <th>名前</th>
          <th>ジャンル</th>
        </tr>
      </thead>
      <% @products.each do |product| %>
      <tbody>
        <tr>
          <td><%= product.id %></td>
          <td><%= link_to product.name, admin_product_path(product) %></td>
          <td><%= product.genre.name %></td>
        </tr>
      </tbody>
      <% end %>
      <%= paginate @products %>
    </table>
      <% else %>
        <h4 class="text-center">検索結果はありませんでした。</h4>
      <% end %>
  </div>
</div>