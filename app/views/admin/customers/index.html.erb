<div class="container mt-3">
  <h5 class="col-md-2 bg-light text-center">会員一覧</h5>
  <div class="row">
    <div class="col-md-8 mx-auto w-auto">
    <% if @customers.empty?%>
      <p>ユーザーはいません</p>
      <% else %>
      <table class='table table-hover table-inverse'>
        <thead class="bg-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to admin_customer_path(customer.id) do %>
                <%= customer.surname %> <%= customer.name %>
                <% end %></td>
            <td><%= customer.email %></td>
            <td>
            <% if customer.is_delete == false %>
            <p class="text-success">有効</p>
            <% else %>
            <p>退会</p></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
    <div class="text-center pb-5"><%= paginate @customers%></div>
    </div>
  </div>
</div>