<div class="container">
  <div class="row">
    <div class="col-md-8"><
    <span class="bg-secondary"><%= @customer.full_name %>さんの会員情報編集</span>
      <%= form_with model: [:admin, @customer], local:true do |f| %>
     　<%= f.label :"氏名" %>
     　<%= f.text_field :surename %>
     　<%= f.text_field :name %>
     　<%= f.label :"フリガナ" %>
     　<%= f.text_field :surename_kana %>
     　<%= f.text_field :name_kana %>
     　<%= f.label :"郵便番号" %>
     　<%= f.text_field :adress %>
     　<%= f.label :"住所" %>
     　<%= f.text_field :postal_code %>
     　<%= f.label :"電話番号" %>
     　<%= f.text_field :phone_number %>
     　<%= f.label :"メールアドレス" %>
     　<%= f.text_field :email %>
     　<%= f.label :"会員ステータス" %>
     　<%= f.radio_button :is_delete, false %>
     　<%= f.label :is_delete, "退会済", value:false %>
     　<%= f.radio_button :is_delete, true %>
     　<%= f.label :is_delete, "有効", value:true %>
     　<%= f.submit "変更を保存",class: 'btn btn-success' %>
     </div>
  </div>
</div>