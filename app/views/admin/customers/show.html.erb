<div class="container">
    <h4 class="col-md-4 bg-light mt-3 text-center"><%= @customer.full_name %>さんの会員情報</h4>
  <div class="row">
    <div class="col-md-8">
    <table class='table table-hover table-inverse mt-3'>
      <tbody>
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>ユーザーステータス</td>
          <td><% if @customer.is_delete == false %>
            <p　class="text-success">有効</p>
            <% else %>
            <p>退会</p></td>
            <% end %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to "編集", edit_admin_customer_path(@customer.id), class: 'btn btn-success' %>
          <%= link_to "注文一覧に戻る", admin_orders_path, class: 'btn btn-primary' %></td>
        </tr>
      </tbody>
      </table>
    </div>
  </div>
</div>