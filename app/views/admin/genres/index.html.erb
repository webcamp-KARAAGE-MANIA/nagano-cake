<div class="container mt-3">
  <div class="row">
    <div class='col-md-6 '>
      <h5 class="col-md-4 bg-light pl-4 pr-4 text-center">ジャンル一覧</h5>

      <from class="form-inline mt-3">
        <div class="form-group">
        <%= form_for @genre, url: admin_genres_path do |f| %>
        <lavel for="genre">ジャンル名</label>
        <%= f.text_field :name, class: 'form-control genre_name' %>
        <%= f.submit "新規登録",class: 'btn btn-success' %>
       <% end %>
       </div></from><br>

      <table class='table table-hover table-inverse'>
        <thead class=bg-light>
          <tr>
          <th>ジャンル</th>
          <th></th>
          <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
          <td><%= link_to "削除", admin_genre_path(genre.id),method: :delete ,class: 'btn btn-danger'%></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>