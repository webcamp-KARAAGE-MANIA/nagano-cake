<div class="container mt-3">
  <div class="row">
    <div class='col-md-6 '>
      <h2>ジャンル一覧</h2>

      <p>ジャンル名</p>
        <%= form_for @genre, url: admin_genres_path do |f| %>
        <%= f.text_field :name, class: 'form-control genre_name' %>
        <%= f.submit "新規登録",class: 'btn btn-success' %>
       <% end %>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
          <th>ジャンル</th>
          <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
          <td><%= link_to "削除", admin_genre_path(genre.id),method: :delete ,class: 'btn btn-danger'%></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>