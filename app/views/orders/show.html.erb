<div class="container">
  <div row>
    <div class="bg-light pl-4 pr-4 text-center">
      <h5 class="lh-auto text-center">注文履歴詳細</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <p>注文情報</p>
      <table>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postal_code %><br>
            <%=@order.shipping_address %><br>
            <%=@order.attention %>
          </td>
        </tr>
         <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
         <tr>
          <th>ステータス</th>
          <td><%= @order.order_status %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-4">
      <p>注文情報</p>
      <table>
        <tr>
          <th>商品合計</th>
          <td><%= @order.order_product_total.to_s(:delimited) %></td>
        </tr>
         <tr>
          <th>配送料</th>
          <td><%= @order.shipping_fee.to_s(:delimited) %></td>
        </tr>
         <tr>
          <th>ご請求額</th>
          <td><%= @order.total_amount.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <p>注文内容</p>
      <table>
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.product.name %></td>
            <td><%= order_detail.product.add_tax_price.to_s(:delimited) %></td>
            <td><%= order_detail.quantity %></td>
            <td><%= order_detail.order_detail_product_total.to_s(:delimited) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>