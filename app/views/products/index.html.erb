<div class="container">
  <div class="row">
    <div class="col_md_12">
      <h3>商品一覧</h3><h5>(全<%= @products.count %>件)</h5>
    </div>
  </div>
      <div class="row">
        <div class="col_md_8">
          <div class="d-flex justify-content-around">
            <% @products.each do |product| %>
            <div class="col-md-2 products__image">
                <%= link_to product_path(product.id),style: "color: black;" do %>
                <%= attachment_image_tag product, :image, fallback:"no-image.png", size: '180x130' %>
              <div><%= product.name %></div>
              <div>¥<%= product.add_tax_price.to_s(:delimited) %></div>
            <% end %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>