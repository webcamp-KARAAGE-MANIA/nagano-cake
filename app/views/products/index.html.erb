<div class="container">
  <div class="row">
    <div class="col_md_8">
      <h3>商品一覧</h3><h5>(全<%= @products.count %>件)</h5>
        <div class="d-flex justify-content-around">
        <% @products.each do |product| %>
        <%= link_to product_path(product.id) do %>
        <%= attachment_image_tag product, :image, fallback:"no-image.png", size: '180x130' %>
        <div><%= product.name %></div>
        <div><%= product.price %></div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>