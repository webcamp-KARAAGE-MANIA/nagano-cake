<div class="container">
  <div class="row">
   <div class="mt-3 w-auto mx-auto">
    <% if @datas.empty? %>
      <h2>該当する商品はありません</h2>
    <% end %>
    <div class="col-md-12">
    <div class="d-flex flex-wrap">
      <% @datas.each do |data| %>
        <div class="genre">
          <%= link_to product_path(data.id) do %>
            <%= attachment_image_tag data, :image, size: "190x150", class: "img_hover", class: "shadow" %><br>
          <% end %>
          <p><%=  data.name %></p><br>
          <p>￥<%= data.add_tax_price %></p>
        </div>
      <% end %>
     </div>
     </div>
    <div><%= link_to "商品一覧",products_path,class: "btn btn-primary" %></div>
  </div>
</div>
</div>
