<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
    <% if @datas.empty? %>
      <h2>該当する商品はありません</h2>
    <% end %>
      <% @datas.each do |data| %>
      <h3><%= data.genre.name %>一覧</h3><!--<h6>(全<%#= data.count %>件)</h6>-->
        <div>
          <%= link_to product_path(data.id) do %>
            <%= attachment_image_tag data, :image, size: "190x150", class: "img_hover", class: "shadow" %><br>
          <% end %>
          <p><%=  data.name %></p><br>
          <p>￥<%= data.add_tax_price %></p>
        </div>
      <% end %>
    <div><%= link_to "商品一覧",products_path,class: "btn btn-primary" %></div>
   </div>
</div>
</div>
